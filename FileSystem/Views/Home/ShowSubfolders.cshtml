@model IEnumerable<FileSystem.Models.Folder>

<h1>Catalog Items</h1>

@if (!(Model.Count() > 0))
{
    <div>
        <a asp-action="Create" class="btn btn-primary">Add Folder</a>
    </div>

}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="ShowSubfolders" asp-route-id="@item.Id">@item.Name</a>
                    </td>
                    <td>
                        <a asp-action="Create" class="btn btn-primary">Add Folder</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
